{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "esnext",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./.build",
    "paths": {
      "#App/*": ["App/*"],
      "#database/*": ["database/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./App/**/*.ts", "./App/**/*.json"]
}
