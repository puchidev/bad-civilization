{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./App",
    "outDir": "./.build",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./App/**/*.ts", "./App/**/*.json"]
}
